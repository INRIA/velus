node count_down(n : int)
returns (cpt : int)
let
  cpt = n fby (cpt - 1);
tel

node rising_edge_retrigger(i : bool; n : int)
returns (o : bool)
var edge, ck : bool; v : int;
let
  edge = i and (false fby (not i));
  ck = edge or (false fby o);
  v = merge ck (true -> (restart count_down every edge)(n when ck))
               (false -> 0);
  o = v > 0;
tel

