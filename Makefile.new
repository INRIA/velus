OTHERFLAGS=-exclude-dir CompCert -exclude-dir extraction/CompCert
export OTHERFLAGS

.PHONY: all clean proof

all: proof

proof: Makefile.auto
	@$(MAKE) -s -f $< all	  

clean: Makefile.auto
	@$(MAKE) -s -f $< $@	  	

Makefile.auto: automake _CoqProject
	@./$< < _CoqProject > $@

automake: tools/automake.ml
	@ocamlopt -o $@ $<

tools/automake.ml: tools/automake.mll
	@ocamllex $<
